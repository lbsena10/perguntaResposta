<%- include('partials/header.ejs') %>
<body>
  <%- include('partials/navbar.ejs') %>
  <div class="container">
    <hr />
    <h2>Perguntas</h2>
    <hr />
    <a href="/perguntar" class="btn btn-primary">Perguntar</a>
    <hr />
    <p></p>

    <% perguntas.forEach(perguntas => { %>
    <p></p>
    <div class="card">
      <div class="card-body">
        <h3><%= perguntas.titulo %></h3>
      </div>
      <div class="card-footer">
        <a href="/pergunta/<%= perguntas.id %>"
          ><button class="btn btn-primary">Responder</button></a
        >
      </div>
    </div>
    <% }) %>
  </div>
</body>
<%- include('partials/footer.ejs') %>
